@page
@model Dashboard.Pages.AutosModel

<head>
    <title>Autos</title>
    <!-- Enlace a Bootstrap para estilos de la página -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/estilos.css" rel="stylesheet" asp-append-version="true" />
</head>

<body>
    <div class="container">
        <h1 class="text-center my-4">Autos</h1> <!-- Título centrado de la página -->
        <!-- Formulario de búsqueda para aplicar filtros -->
        <form method="get">
            <div class="row mb-4">
                <!-- Campo de entrada para filtrar por Marca -->
                <div class="col-md-2">
                    <input type="text" name="MarcaFiltro" class="form-control" placeholder="Marca" value="@Model.MarcaFiltro" />
                </div>
                <!-- Campo de entrada para filtrar por Modelo -->
                <div class="col-md-2">
                    <input type="text" name="ModeloFiltro" class="form-control" placeholder="Modelo" value="@Model.ModeloFiltro" />
                </div>
                <!-- Campo de entrada para filtrar por Año -->
                <div class="col-md-2">
                    <input type="number" name="AñoFiltro" class="form-control" placeholder="Año" value="@Model.AñoFiltro" />
                </div>
                <!-- Campo de entrada para filtrar por Precio máximo -->
                <div class="col-md-2">
                    <input type="number" name="PrecioFiltro" class="form-control" placeholder="Precio máximo" value="@Model.PrecioFiltro" />
                </div>
                <!-- Campo de entrada para filtrar por Sucursal -->
                <div class="col-md-2">
                    <input type="text" name="SucursalFiltro" class="form-control" placeholder="Sucursal" value="@Model.SucursalFiltro" />
                </div>
                <!-- Botón para aplicar los filtros -->
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </div>
        </form>

        <!-- Tabla para mostrar los resultados de los autos -->
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Año</th>
                        <th>Precio</th>
                        <th>Sucursal</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Itera sobre la lista de autos y muestra cada uno en una fila -->
                    @foreach (var auto in Model.ListaAutos)
                    {
                        <tr>
                            <td>@auto.Marca</td> <!-- Muestra la marca del auto -->
                            <td>@auto.Modelo</td> <!-- Muestra el modelo del auto -->
                            <td>@auto.Año</td> <!-- Muestra el año del auto -->
                            <td>@auto.Precio.ToString("C")</td> <!-- Muestra el precio formateado como moneda -->
                            <td>@auto.Sucursal.Nombre</td> <!-- Muestra el nombre de la sucursal donde está el auto -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>